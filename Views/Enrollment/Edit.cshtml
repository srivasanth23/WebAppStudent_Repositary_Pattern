@model WebAppStudent_Repositary_Pattern.Models.Enrollments
@{
    ViewBag.Title = "Edit Enrollment";
}
<h2>Edit Enrollment</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label>Student</label>
        <select asp-for="StudentId" asp-items="ViewBag.StudentId" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Course</label>
        <select asp-for="CourseId" asp-items="ViewBag.CourseId" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
