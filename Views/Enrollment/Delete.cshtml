@model WebAppStudent_Repositary_Pattern.Models.Enrollments

<h2>Delete Enrollment</h2>
<p>Are you sure you want to delete this enrollment?</p>
<div>
    <p><strong>Student Name:</strong> @Model.Students?.Name</p>
    <p><strong>Course Name:</strong> @Model.Courses?.Name</p>
</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
