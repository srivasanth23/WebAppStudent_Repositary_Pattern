@model IEnumerable<WebAppStudent_Repositary_Pattern.Models.Enrollments>

<h2>Enrollments List</h2>
<table class="table">
    <thead>
        <tr>
            <th>Student Name</th>
            <th>Course Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var enrollment in Model)
        {
            <tr>
                <td>@enrollment.Students?.Name</td>
                <td>@enrollment.Courses?.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@enrollment.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@enrollment.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@enrollment.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary">Create New</a>
