@model WebAppStudent_Repositary_Pattern.Models.Courses

@{
    ViewData["Title"] = "Delete Course";
}

<h2>Delete Course</h2>
<hr />

<div class="alert alert-danger">
    <strong>Warning!</strong> Are you sure you want to delete this course?
</div>

<div class="card shadow p-4">
    <dl class="row">
        <dt class="col-sm-3">Course ID</dt>
        <dd class="col-sm-9">@Model.Id</dd>

        <dt class="col-sm-3">Course Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Description</dd>

        <dt class="col-sm-3">Credits</dt>
        <dd class="col-sm-9">@Model.Credits</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
