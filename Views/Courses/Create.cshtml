@model WebAppStudent_Repositary_Pattern.Models.Courses // This is important to add the fiedls of that model

@{
    ViewData["Title"] = "Create Course";
}

<h2>New Course</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Credits" class="control-label"></label>
        <input asp-for="Credits" class="form-control" />
        <span asp-validation-for="Credits" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success"> Save </button>
    <a asp-action="Index" class="btn btn-secondary"> Cancel </a>
</form>


@* // For any validation in inputs we need  *@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}